

@model IEnumerable<LegoStore.Models.Box>

<div id="searchresults">
    <h3 style="color:#ffffff">Все конструкторы : @Model.First().Series</h3>

    <div class="container row">
        @foreach (var b in Model)
        {<div class="col-md-4">

                <div class="thumbnail" style="height:500px; background-color:rgba(255, 255, 255, 0.81)">
                    <a href="/Home/kit/@b.Id"><img src="~/Content/Image/@b.Image" style= "height:300px" /></a>

                    <div>
                        <div class="text-center">
                            <p>Набор:@b.Name</p>
                            <p>Серия:@b.Series</p>
                            <p>Цена: @b.Price</p>

                            <p>
                                <a class="btn btn-primary" href="/Home/Buy/@b.Id">Купить</a>
                                <a class="btn btn-primary" href="/Home/Basket/@b.Id">В корзину</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>